          new Shopify.OptionSelectors("product-info-options", { product: "json error", onVariantSelected: selectCallback });
        });
      -->
    </script>
  {% endfor %} <!-- Products -->
{% endfor %} <!-- Collections -->
</div>
<!-- end page -->
